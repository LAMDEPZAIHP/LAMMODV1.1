-- Circle (V√≤ng tr√≤n ch·ªâ b√°o)
local circle = Instance.new("Frame", mainFrame)
circle.Name = "ProgressCircle"
circle.Size = UDim2.new(0, 24, 0, 24)
circle.Position = UDim2.new(0, -12, 0.5, -12) -- V·ªã tr√≠ ban ƒë·∫ßu (0%)
circle.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
circle.BorderSizePixel = 0
circle.ZIndex = 2
Instance.new("UICorner", circle).CornerRadius = UDim.new(1, 0)

local totalSteps = 100
local stepDuration = 0.015 -- T·ªïng th·ªùi gian t·∫£i kho·∫£ng 1.5 gi√¢y

for i = 1, totalSteps do
    local percentage = i / totalSteps
    local width = 320 * percentage
    local circleX = width - 12 -- CƒÉn ch·ªânh v√≤ng tr√≤n ·ªü cu·ªëi thanh ti·∫øn tr√¨nh

    -- C·∫≠p nh·∫≠t thanh ti·∫øn tr√¨nh v√† v√≤ng tr√≤n
    progressBar.Size = UDim2.new(0, width, 1, 0)
    circle.Position = UDim2.new(0, circleX, 0.5, -12)

    label.Text = "Loading "..i.."%"
    task.wait(stepDuration)
end

-- Tween out
TweenService:Create(mainFrame, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
TweenService:Create(progressBar, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
